{
  "name": {
    "en": "Solax + Battery",
    "de": "Solax mit Batterie"
  },
  "class": "solarpanel",
  "energy": {
    "batteries": [
      "OTHER"
    ]
  },
  "capabilities": [
    "measure_power",
    "measure_temperature.invertor",
    "measure_power.battery",
    "measure_power.pv1input",
    "measure_power.pv2input",
    "measure_current.batt_charge",
    "measure_voltage.batt_charge"    
  ],
  "capabilitiesOptions": {
    "measure_current.batt_charge": {
      "title": {
        "en": "Battery charge current"
      }
    }, 
    "measure_voltage.batt_charge": {
      "title": {
        "en": "Battery charge voltage"
      }
    },       
    "measure_power": {
      "decimals": 0,
      "title": {
        "en": "Solar Power",
        "de": "Solarleistung"
      }
    },
    "measure_power.battery": {
      "decimals": 0,
      "title": {
        "en": "Battery Power",
        "de": "Batterieleistung"
      }
    },    
    "measure_temperature.invertor": {
      "title": {
        "en": "Heatsink temperature",
        "nl": "Heatsink temperatuur",
        "de": "Kühlkörpertemperatur"
      },
      "decimals": 2
    },
    "measure_power.pv1input": {
      "decimals": 0,
      "title": {
        "en": "PV1 input",
        "de": "PV-Strang 1 Eingang"
      }
    },
    "measure_power.pv2input": {
      "decimals": 0,
      "title": {
        "en": "PV2 input",
        "de": "PV-Strang 2 Eingang"
      }
    }    
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "pair": [
    {
      "id": "start"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Inverter settings",
        "de": "Wechselrichtereinstellungen"
      },
      "children": [
        {
          "id": "address",
          "type": "text",
          "value": "0.0.0.0",
          "label": {
            "en": "IP Address",
            "de": "IP-Adresse"
          }
        },
        {
          "id": "port",
          "type": "number",
          "value": 1502,
          "step": 1,
          "label": {
            "en": "Port",
            "de": "Port"
          }
        },
        {
          "id": "id",
          "type": "number",
          "value": 1,
          "step": 1,
          "attr": {
            "min": 0,
            "max": 50
          },
          "label": {
            "en": "Inverter ID",
            "nl": "Inverter ID",
            "de": "Wechselrichter-ID"
          }
        }
      ]
    }
  ]
}