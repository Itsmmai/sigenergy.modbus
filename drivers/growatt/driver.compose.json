{
  "name": {
    "en": "Growatt Inverter"
  },
  "class": "solarpanel",
  "energy": {
    "batteries": [
      "OTHER"
    ]
  },
  "capabilities": [
    "measure_power",
    "measure_power.input",
    "measure_power.output",        
    "measure_current.phase1",
    "measure_current.phase2",
    "measure_current.phase3",
    "measure_temperature.invertor",
    "meter_power",
    "meter_power.daily"
  ],
  "capabilitiesOptions": {
    "measure_power": {
      "decimals": 0,
      "title": {
        "en": "Power"
      }
    },
    "measure_power.input": {
      "decimals": 0,
      "title": {
        "en": "Input Power"
      }
    },
    "measure_power.output": {
      "decimals": 0,
      "title": {
        "en": "Output Power"
      }
    },        
    "measure_current.phase1": {
      "title": {
        "en": "AC Current phase1"
      }
    },
    "measure_current.phase2": {
      "title": {
        "en": "AC Current phase2"
      }
    },
    "measure_current.phase3": {
      "title": {
        "en": "AC Current phase3"
      }
    },
    "measure_temperature.invertor": {
      "title": {
        "en": "Heatsink temperature",
        "nl": "Heatsink temperatuur"
      },
      "decimals": 2
    },
    "meter_power": {
      "title": {
        "en": "Total Yield",
        "nl": "Totale opbrengst"
      },
      "decimals": 2,
      "units": {
        "en": "MWh"
      }      
    },
    "meter_power.daily": {
      "title": {
        "en": "Total Day Yield",
        "nl": "Totale dag opbrengst"
      },
      "decimals": 1,
      "icon": "/assets/total_yield.svg"
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "pair": [
    {
      "id": "start"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Inverter settings"
      },
      "children": [
        {
          "id": "address",
          "type": "text",
          "value": "0.0.0.0",
          "label": {
            "en": "IP Address"
          }
        },
        {
          "id": "port",
          "type": "number",
          "value": 1502,
          "step": 1,
          "label": {
            "en": "Port"
          }
        },
        {
          "id": "id",
          "type": "number",
          "value": 1,
          "step": 1,
          "attr": {
            "min": 0,
            "max": 50
          },
          "label": {
            "en": "Inverter ID",
            "nl": "Inverter ID"
          }
        }
      ]
    }
  ]
}